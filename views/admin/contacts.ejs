<%- include('../partials/header') %>
<%- include('../partials/navbar-admin') %>

<div class="dashboard admin-dashboard">
    <div class="container">
        <div class="page-header">
            <h1><i class="fas fa-envelope"></i> Contact Queries</h1>
            <p>Manage user inquiries and messages</p>
        </div>

        <% if (success) { %>
            <div class="alert alert-success">
                <i class="fas fa-check-circle"></i>
                <%= success %>
            </div>
        <% } %>

        <!-- Filter Tabs -->
        <div class="filter-tabs">
            <a href="/admin/contacts?status=all" class="tab <%= status === 'all' ? 'active' : '' %>">
                All Messages
            </a>
            <a href="/admin/contacts?status=new" class="tab <%= status === 'new' ? 'active' : '' %>">
                New
            </a>
            <a href="/admin/contacts?status=read" class="tab <%= status === 'read' ? 'active' : '' %>">
                Read
            </a>
        </div>

        <!-- Contacts List -->
        <div class="dashboard-card">
            <h2>Messages (<%= contacts.length %>)</h2>
            
            <% if (contacts.length > 0) { %>
                <div class="contacts-list">
                    <% contacts.forEach(contact => { %>
                        <div class="contact-item <%= contact.status %>">
                            <div class="contact-header">
                                <div class="contact-info">
                                    <h3>
                                        <%= contact.name %>
                                        <% if (contact.status === 'new') { %>
                                            <span class="badge badge-new">New</span>
                                        <% } %>
                                    </h3>
                                    <p class="contact-email"><i class="fas fa-envelope"></i> <%= contact.email %></p>
                                    <p class="contact-date"><i class="fas fa-clock"></i> <%= new Date(contact.createdAt).toLocaleString() %></p>
                                </div>
                                <div class="contact-actions">
                                    <% if (contact.status === 'new') { %>
                                        <form action="/admin/contacts/mark-read/<%= contact._id %>" method="POST" style="display: inline;">
                                            <button type="submit" class="btn-outline btn-sm">
                                                <i class="fas fa-check"></i> Mark as Read
                                            </button>
                                        </form>
                                    <% } %>
                                    <form action="/admin/contacts/delete/<%= contact._id %>" method="POST" style="display: inline;" onsubmit="return confirm('Are you sure you want to delete this message?');">
                                        <button type="submit" class="btn-danger btn-sm">
                                            <i class="fas fa-trash"></i> Delete
                                        </button>
                                    </form>
                                </div>
                            </div>
                            <div class="contact-message">
                                <h4>Message:</h4>
                                <p><%= contact.message %></p>
                            </div>
                        </div>
                    <% }); %>
                </div>
            <% } else { %>
                <div class="empty-state">
                    <i class="fas fa-inbox"></i>
                    <p>No messages found</p>
                </div>
            <% } %>

            <!-- Pagination -->
            <% if (totalPages > 1) { %>
                <div class="pagination">
                    <% if (currentPageNum > 1) { %>
                        <a href="/admin/contacts?page=<%= currentPageNum - 1 %>&status=<%= status %>" class="btn-outline">
                            <i class="fas fa-chevron-left"></i> Previous
                        </a>
                    <% } %>
                    
                    <span class="page-info">Page <%= currentPageNum %> of <%= totalPages %></span>
                    
                    <% if (currentPageNum < totalPages) { %>
                        <a href="/admin/contacts?page=<%= currentPageNum + 1 %>&status=<%= status %>" class="btn-outline">
                            Next <i class="fas fa-chevron-right"></i>
                        </a>
                    <% } %>
                </div>
            <% } %>
        </div>
    </div>
</div>

<style>
/* Enhanced Admin Contacts Page Styling */

/* Page Header Enhancement */
.admin-dashboard .page-header {
    background: var(--bg-secondary);
    padding: 2rem;
    border-radius: 16px;
    border: 1px solid var(--border-color);
    margin-bottom: 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.admin-dashboard .page-header h1 {
    display: flex;
    align-items: center;
    gap: 1rem;
    font-size: 2rem;
    color: var(--text-primary);
    margin-bottom: 0.5rem;
}

.admin-dashboard .page-header h1 i {
    width: 50px;
    height: 50px;
    background: var(--gradient-primary);
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
}

.admin-dashboard .page-header p {
    color: var(--text-secondary);
    margin-left: 66px;
}

/* Enhanced Alert */
.admin-dashboard .alert {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1.25rem 1.5rem;
    border-radius: 12px;
    margin-bottom: 2rem;
    animation: slideDown 0.3s ease;
    border: 1px solid;
}

.admin-dashboard .alert-success {
    background: rgba(16, 185, 129, 0.1);
    border-color: var(--success-color);
    color: var(--text-primary);
}

.admin-dashboard .alert i {
    font-size: 1.5rem;
    color: var(--success-color);
}

/* Enhanced Filter Tabs */
.admin-dashboard .filter-tabs {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1rem;
    margin-bottom: 2rem;
    background: var(--bg-secondary);
    padding: 0.75rem;
    border-radius: 12px;
    border: 1px solid var(--border-color);
}

.admin-dashboard .filter-tabs .tab {
    padding: 1rem 1.5rem;
    border-radius: 8px;
    text-decoration: none;
    color: var(--text-secondary);
    font-weight: 600;
    text-align: center;
    transition: all 0.3s ease;
    border: 1px solid transparent;
}

.admin-dashboard .filter-tabs .tab:hover {
    color: var(--primary-color);
    background: var(--bg-primary);
    border-color: var(--border-color);
}

.admin-dashboard .filter-tabs .tab.active {
    background: var(--primary-color);
    color: white;
    box-shadow: 0 4px 12px rgba(16, 185, 129, 0.3);
}

/* Enhanced Dashboard Card */
.admin-dashboard .dashboard-card {
    background: var(--bg-secondary);
    border: 1px solid var(--border-color);
    border-radius: 16px;
    padding: 2rem;
}

.admin-dashboard .dashboard-card h2 {
    color: var(--text-primary);
    margin-bottom: 2rem;
    font-size: 1.5rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

/* Enhanced Contacts List */
.admin-dashboard .contacts-list {
    display: grid;
    gap: 1.5rem;
}

/* Enhanced Contact Item */
.admin-dashboard .contact-item {
    background: var(--bg-primary);
    border: 2px solid var(--border-color);
    border-radius: 12px;
    padding: 1.5rem;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
}

.admin-dashboard .contact-item::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    width: 4px;
    height: 100%;
    background: var(--border-color);
}

.admin-dashboard .contact-item.new::before {
    background: linear-gradient(180deg, #f59e0b, #ef4444);
}

.admin-dashboard .contact-item.read::before {
    background: linear-gradient(180deg, #10b981, #059669);
}

.admin-dashboard .contact-item:hover {
    transform: translateY(-3px);
    box-shadow: var(--shadow-lg);
    border-color: var(--primary-color);
}

/* Contact Header */
.admin-dashboard .contact-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 1.5rem;
    gap: 1rem;
}

.admin-dashboard .contact-info {
    flex: 1;
}

.admin-dashboard .contact-info h3 {
    font-size: 1.25rem;
    color: var(--text-primary);
    margin-bottom: 0.75rem;
    display: flex;
    align-items: center;
    gap: 0.75rem;
    flex-wrap: wrap;
}

.admin-dashboard .badge {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    padding: 0.25rem 0.75rem;
    border-radius: 50px;
    font-size: 0.75rem;
    font-weight: 600;
}

.admin-dashboard .badge-new {
    background: rgba(239, 68, 68, 0.1);
    color: #ef4444;
    border: 1px solid rgba(239, 68, 68, 0.3);
    animation: pulse 2s ease-in-out infinite;
}

.admin-dashboard .contact-email,
.admin-dashboard .contact-date {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--text-secondary);
    font-size: 0.9375rem;
    margin-bottom: 0.5rem;
}

.admin-dashboard .contact-email i,
.admin-dashboard .contact-date i {
    color: var(--primary-color);
    font-size: 0.875rem;
}

/* Contact Actions */
.admin-dashboard .contact-actions {
    display: flex;
    gap: 0.75rem;
    flex-wrap: wrap;
}

.admin-dashboard .contact-actions form {
    display: inline-block;
}

.admin-dashboard .btn-sm {
    padding: 0.625rem 1.25rem;
    font-size: 0.875rem;
    border-radius: 8px;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-weight: 600;
    transition: all 0.3s ease;
    border: 2px solid;
    cursor: pointer;
}

.admin-dashboard .btn-outline {
    background: transparent;
    border-color: var(--border-color);
    color: var(--text-primary);
}

.admin-dashboard .btn-outline:hover {
    background: var(--primary-color);
    border-color: var(--primary-color);
    color: white;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(16, 185, 129, 0.3);
}

.admin-dashboard .btn-danger {
    background: transparent;
    border-color: #ef4444;
    color: #ef4444;
}

.admin-dashboard .btn-danger:hover {
    background: #ef4444;
    color: white;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(239, 68, 68, 0.3);
}

/* Contact Message */
.admin-dashboard .contact-message {
    background: var(--bg-secondary);
    border: 1px solid var(--border-color);
    border-radius: 8px;
    padding: 1.25rem;
}

.admin-dashboard .contact-message h4 {
    color: var(--text-primary);
    font-size: 0.875rem;
    font-weight: 600;
    margin-bottom: 0.75rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

.admin-dashboard .contact-message h4::before {
    content: '\f4ad';
    font-family: 'Font Awesome 6 Free';
    font-weight: 900;
    color: var(--primary-color);
}

.admin-dashboard .contact-message p {
    color: var(--text-secondary);
    line-height: 1.7;
    margin: 0;
}

/* Enhanced Empty State */
.admin-dashboard .empty-state {
    text-align: center;
    padding: 4rem 2rem;
    background: var(--bg-primary);
    border: 2px dashed var(--border-color);
    border-radius: 12px;
}

.admin-dashboard .empty-state i {
    font-size: 4rem;
    color: var(--text-tertiary);
    margin-bottom: 1rem;
    opacity: 0.5;
}

.admin-dashboard .empty-state p {
    color: var(--text-secondary);
    font-size: 1.125rem;
    margin: 0;
}

/* Enhanced Pagination */
.admin-dashboard .pagination {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 1rem;
    margin-top: 2rem;
    padding-top: 2rem;
    border-top: 1px solid var(--border-color);
}

.admin-dashboard .pagination .btn-outline {
    padding: 0.75rem 1.5rem;
    border-radius: 8px;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
}

.admin-dashboard .page-info {
    padding: 0.75rem 1.5rem;
    background: var(--bg-primary);
    border: 1px solid var(--border-color);
    border-radius: 8px;
    color: var(--text-primary);
    font-weight: 600;
}

/* Animations */
@keyframes slideDown {
    from {
        opacity: 0;
        transform: translateY(-20px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

@keyframes pulse {
    0%, 100% {
        opacity: 1;
    }
    50% {
        opacity: 0.6;
    }
}

/* Responsive Design */
@media (max-width: 968px) {
    .admin-dashboard .page-header {
        flex-direction: column;
        align-items: flex-start;
        gap: 1rem;
    }
    
    .admin-dashboard .filter-tabs {
        grid-template-columns: 1fr;
    }
    
    .admin-dashboard .contact-header {
        flex-direction: column;
    }
    
    .admin-dashboard .contact-actions {
        width: 100%;
    }
    
    .admin-dashboard .contact-actions form {
        flex: 1;
    }
    
    .admin-dashboard .btn-sm {
        width: 100%;
        justify-content: center;
    }
}

@media (max-width: 640px) {
    .admin-dashboard .page-header h1 {
        font-size: 1.5rem;
    }
    
    .admin-dashboard .dashboard-card {
        padding: 1.5rem;
    }
    
    .admin-dashboard .contact-item {
        padding: 1.25rem;
    }
    
    .admin-dashboard .pagination {
        flex-direction: column;
    }
    
    .admin-dashboard .pagination .btn-outline {
        width: 100%;
        justify-content: center;
    }
}
</style>

<%- include('../partials/footer') %>
