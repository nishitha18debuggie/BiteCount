<%- include('../partials/header') %>
<%- include('../partials/navbar-admin') %>

<div class="dashboard admin-dashboard">
    <div class="container">
        <div class="page-header">
            <h1><i class="fas fa-users"></i> Manage Users</h1>
            <p>View and manage all registered users</p>
        </div>

        <% if (success) { %>
            <div class="alert alert-success">
                <i class="fas fa-check-circle"></i>
                <%= success %>
            </div>
        <% } %>

        <!-- Search Bar -->
        <div class="dashboard-card">
            <form action="/admin/users" method="GET" class="search-form">
                <div class="search-group">
                    <input type="text" name="search" placeholder="Search by name or email..." value="<%= search %>">
                    <button type="submit" class="btn-primary">
                        <i class="fas fa-search"></i> Search
                    </button>
                    <% if (search) { %>
                        <a href="/admin/users" class="btn-outline">Clear</a>
                    <% } %>
                </div>
            </form>
        </div>

        <!-- Users Table -->
        <div class="dashboard-card">
            <h2>Users (<%= users.length %>)</h2>
            <div class="table-responsive">
                <table class="data-table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Age</th>
                            <th>Gender</th>
                            <th>Weight</th>
                            <th>Goal</th>
                            <th>Streak</th>
                            <th>Joined</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (users.length > 0) { %>
                            <% users.forEach(user => { %>
                                <tr>
                                    <td><%= user.fullName %></td>
                                    <td><%= user.email %></td>
                                    <td><%= user.age %></td>
                                    <td><%= user.gender.charAt(0).toUpperCase() + user.gender.slice(1) %></td>
                                    <td><%= user.weight %> kg</td>
                                    <td><%= user.calorieGoal %> kcal</td>
                                    <td><%= user.currentStreak %> days</td>
                                    <td><%= new Date(user.createdAt).toLocaleDateString() %></td>
                                    <td>
                                        <form action="/admin/users/delete/<%= user._id %>" method="POST" style="display: inline;" onsubmit="return confirm('Are you sure you want to delete this user? This action cannot be undone.');">
                                            <button type="submit" class="btn-danger btn-sm">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            <% }); %>
                        <% } else { %>
                            <tr>
                                <td colspan="9" class="text-center">No users found</td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            <% if (totalPages > 1) { %>
                <div class="pagination">
                    <% if (currentPageNum > 1) { %>
                        <a href="/admin/users?page=<%= currentPageNum - 1 %><%= search ? '&search=' + search : '' %>" class="btn-outline">
                            <i class="fas fa-chevron-left"></i> Previous
                        </a>
                    <% } %>
                    
                    <span class="page-info">Page <%= currentPageNum %> of <%= totalPages %></span>
                    
                    <% if (currentPageNum < totalPages) { %>
                        <a href="/admin/users?page=<%= currentPageNum + 1 %><%= search ? '&search=' + search : '' %>" class="btn-outline">
                            Next <i class="fas fa-chevron-right"></i>
                        </a>
                    <% } %>
                </div>
            <% } %>
        </div>
    </div>
</div>

<style>
/* Enhanced Admin Users Page Styling */

/* Page Header Enhancement */
.admin-dashboard .page-header {
    background: var(--bg-secondary);
    padding: 2rem;
    border-radius: 16px;
    border: 1px solid var(--border-color);
    margin-bottom: 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.admin-dashboard .page-header h1 {
    display: flex;
    align-items: center;
    gap: 1rem;
    font-size: 2rem;
    color: var(--text-primary);
    margin-bottom: 0.5rem;
}

.admin-dashboard .page-header h1 i {
    width: 50px;
    height: 50px;
    background: var(--gradient-primary);
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
}

.admin-dashboard .page-header p {
    color: var(--text-secondary);
    margin-left: 66px;
}

/* Enhanced Alert */
.admin-dashboard .alert {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1.25rem 1.5rem;
    border-radius: 12px;
    margin-bottom: 2rem;
    animation: slideDown 0.3s ease;
    border: 1px solid;
}

.admin-dashboard .alert-success {
    background: rgba(16, 185, 129, 0.1);
    border-color: var(--success-color);
    color: var(--text-primary);
}

.admin-dashboard .alert i {
    font-size: 1.5rem;
    color: var(--success-color);
}

/* Enhanced Search Form */
.admin-dashboard .search-form {
    padding: 0;
}

.admin-dashboard .search-group {
    display: flex;
    gap: 1rem;
    align-items: stretch;
}

.admin-dashboard .search-group input {
    flex: 1;
    padding: 1rem 1.5rem;
    border: 2px solid var(--border-color);
    border-radius: 12px;
    background: var(--bg-primary);
    color: var(--text-primary);
    font-size: 1rem;
    transition: all 0.3s ease;
}

.admin-dashboard .search-group input:focus {
    outline: none;
    border-color: var(--primary-color);
    box-shadow: 0 0 0 4px rgba(16, 185, 129, 0.1);
}

.admin-dashboard .search-group input::placeholder {
    color: var(--text-secondary);
    opacity: 0.6;
}

.admin-dashboard .search-group .btn-primary,
.admin-dashboard .search-group .btn-outline {
    padding: 1rem 2rem;
    border-radius: 12px;
    font-weight: 600;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    transition: all 0.3s ease;
    border: 2px solid;
    text-decoration: none;
    white-space: nowrap;
}

.admin-dashboard .search-group .btn-primary {
    background: var(--primary-color);
    border-color: var(--primary-color);
    color: white;
}

.admin-dashboard .search-group .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(16, 185, 129, 0.3);
}

.admin-dashboard .search-group .btn-outline {
    background: transparent;
    border-color: var(--border-color);
    color: var(--text-primary);
}

.admin-dashboard .search-group .btn-outline:hover {
    background: var(--bg-primary);
    border-color: var(--primary-color);
    color: var(--primary-color);
}

/* Enhanced Dashboard Card */
.admin-dashboard .dashboard-card {
    background: var(--bg-secondary);
    border: 1px solid var(--border-color);
    border-radius: 16px;
    padding: 2rem;
    margin-bottom: 2rem;
}

.admin-dashboard .dashboard-card h2 {
    color: var(--text-primary);
    margin-bottom: 1.5rem;
    font-size: 1.5rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

/* Enhanced Table */
.admin-dashboard .table-responsive {
    overflow-x: auto;
    border-radius: 12px;
    border: 1px solid var(--border-color);
}

.admin-dashboard .data-table {
    width: 100%;
    border-collapse: collapse;
    background: var(--bg-primary);
}

.admin-dashboard .data-table thead {
    background: var(--bg-secondary);
    border-bottom: 2px solid var(--border-color);
}

.admin-dashboard .data-table thead th {
    padding: 1.25rem 1rem;
    text-align: left;
    font-weight: 700;
    color: var(--text-primary);
    font-size: 0.875rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    white-space: nowrap;
}

.admin-dashboard .data-table tbody tr {
    border-bottom: 1px solid var(--border-color);
    transition: all 0.2s ease;
}

.admin-dashboard .data-table tbody tr:hover {
    background: var(--bg-secondary);
}

.admin-dashboard .data-table tbody tr:last-child {
    border-bottom: none;
}

.admin-dashboard .data-table tbody td {
    padding: 1.25rem 1rem;
    color: var(--text-secondary);
    font-size: 0.9375rem;
    white-space: nowrap;
}

.admin-dashboard .data-table tbody td:first-child {
    color: var(--text-primary);
    font-weight: 600;
}

.admin-dashboard .data-table .text-center {
    text-align: center;
    padding: 3rem;
    color: var(--text-secondary);
    font-style: italic;
}

/* Enhanced Buttons */
.admin-dashboard .btn-sm {
    padding: 0.625rem 1rem;
    font-size: 0.875rem;
    border-radius: 8px;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-weight: 600;
    transition: all 0.3s ease;
    border: 2px solid;
    cursor: pointer;
}

.admin-dashboard .btn-danger {
    background: transparent;
    border-color: #ef4444;
    color: #ef4444;
}

.admin-dashboard .btn-danger:hover {
    background: #ef4444;
    color: white;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(239, 68, 68, 0.3);
}

/* Enhanced Pagination */
.admin-dashboard .pagination {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 1rem;
    margin-top: 2rem;
    padding-top: 2rem;
    border-top: 1px solid var(--border-color);
}

.admin-dashboard .pagination .btn-outline {
    padding: 0.75rem 1.5rem;
    border-radius: 8px;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background: transparent;
    border: 2px solid var(--border-color);
    color: var(--text-primary);
    font-weight: 600;
    transition: all 0.3s ease;
}

.admin-dashboard .pagination .btn-outline:hover {
    background: var(--primary-color);
    border-color: var(--primary-color);
    color: white;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(16, 185, 129, 0.3);
}

.admin-dashboard .page-info {
    padding: 0.75rem 1.5rem;
    background: var(--bg-primary);
    border: 1px solid var(--border-color);
    border-radius: 8px;
    color: var(--text-primary);
    font-weight: 600;
}

/* User Stats Badges in Table */
.admin-dashboard .data-table tbody td:nth-child(7) {
    color: var(--primary-color);
    font-weight: 700;
}

/* Animations */
@keyframes slideDown {
    from {
        opacity: 0;
        transform: translateY(-20px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

/* Responsive Design */
@media (max-width: 968px) {
    .admin-dashboard .page-header {
        flex-direction: column;
        align-items: flex-start;
        gap: 1rem;
    }
    
    .admin-dashboard .search-group {
        flex-direction: column;
    }
    
    .admin-dashboard .search-group .btn-primary,
    .admin-dashboard .search-group .btn-outline {
        width: 100%;
        justify-content: center;
    }
    
    .admin-dashboard .table-responsive {
        border-radius: 0;
        margin: 0 -2rem;
    }
    
    .admin-dashboard .dashboard-card {
        padding: 1.5rem;
    }
}

@media (max-width: 640px) {
    .admin-dashboard .page-header h1 {
        font-size: 1.5rem;
    }
    
    .admin-dashboard .dashboard-card {
        padding: 1.25rem;
    }
    
    .admin-dashboard .data-table {
        font-size: 0.875rem;
    }
    
    .admin-dashboard .data-table thead th,
    .admin-dashboard .data-table tbody td {
        padding: 1rem 0.75rem;
    }
    
    .admin-dashboard .pagination {
        flex-direction: column;
    }
    
    .admin-dashboard .pagination .btn-outline {
        width: 100%;
        justify-content: center;
    }
}

/* Scrollbar Styling for Table */
.admin-dashboard .table-responsive::-webkit-scrollbar {
    height: 8px;
}

.admin-dashboard .table-responsive::-webkit-scrollbar-track {
    background: var(--bg-primary);
    border-radius: 4px;
}

.admin-dashboard .table-responsive::-webkit-scrollbar-thumb {
    background: var(--border-color);
    border-radius: 4px;
}

.admin-dashboard .table-responsive::-webkit-scrollbar-thumb:hover {
    background: var(--primary-color);
}
</style>

