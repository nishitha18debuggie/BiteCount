<%- include('partials/header') %>
<%- include('partials/navbar') %>

<!-- Contact Hero -->
<section class="contact-hero">
    <div class="container">
        <div class="hero-content">
            <div class="hero-badge animate-flip-in">
                <i class="fas fa-envelope"></i>
                <span>Contact Us</span>
            </div>
            <h1 class="hero-title animate-rotate-in">Let's Start a <span class="gradient-text">Conversation</span></h1>
            <p class="hero-subtitle animate-bounce-in">Have questions? We're here to help you on your health journey</p>
        </div>
    </div>
    
    <!-- Floating Elements -->
    <div class="floating-elements-page">
        <div class="float-element-page" style="top: 18%; left: 10%;">
            <i class="fas fa-envelope"></i>
        </div>
        <div class="float-element-page" style="top: 28%; right: 12%;">
            <i class="fas fa-comments"></i>
        </div>
        <div class="float-element-page" style="bottom: 32%; left: 12%;">
            <i class="fas fa-phone"></i>
        </div>
        <div class="float-element-page" style="bottom: 22%; right: 10%;">
            <i class="fas fa-paper-plane"></i>
        </div>
        <div class="float-element-page" style="top: 50%; left: 6%;">
            <i class="fas fa-headset"></i>
        </div>
    </div>
</section>

<!-- Contact Section -->
<section class="contact-main-section">
    <div class="container">
        <!-- Animated Pulse Elements -->
        <div class="contact-pulse-elements">
            <div class="pulse-element pulse-1">
                <i class="fas fa-envelope"></i>
            </div>
            <div class="pulse-element pulse-2">
                <i class="fas fa-comments"></i>
            </div>
            <div class="pulse-element pulse-3">
                <i class="fas fa-phone"></i>
            </div>
            <div class="pulse-element pulse-4">
                <i class="fas fa-paper-plane"></i>
            </div>
            <div class="pulse-element pulse-5">
                <i class="fas fa-headset"></i>
            </div>
            <div class="pulse-element pulse-6">
                <i class="fas fa-message"></i>
            </div>
        </div>

        <div class="contact-grid">
            <!-- Contact Info Cards -->
            <div class="contact-info-section">
                <div class="section-badge">
                    <i class="fas fa-info-circle"></i>
                    <span>Get In Touch</span>
                </div>
                <h2>We're Here to <span class="gradient-text">Help</span></h2>
                <p class="info-description">Have questions, feedback, or need support? We'd love to hear from you. Our team typically responds within 24-48 hours.</p>
                
                <div class="contact-cards">
                    <div class="info-card">
                        <div class="info-icon email">
                            <i class="fas fa-envelope"></i>
                        </div>
                        <div class="info-content">
                            <h4>Email Us</h4>
                            <p>support@bitecount.com</p>
                            <span class="info-badge">Primary Contact</span>
                        </div>
                    </div>
                    
                    <div class="info-card">
                        <div class="info-icon time">
                            <i class="fas fa-clock"></i>
                        </div>
                        <div class="info-content">
                            <h4>Response Time</h4>
                            <p>Within 24-48 hours</p>
                            <span class="info-badge">Fast Support</span>
                        </div>
                    </div>
                    
                    <div class="info-card">
                        <div class="info-icon support">
                            <i class="fas fa-headset"></i>
                        </div>
                        <div class="info-content">
                            <h4>Support Hours</h4>
                            <p>Monday - Friday</p>
                            <span class="info-badge">9 AM - 6 PM EST</span>
                        </div>
                    </div>
                    
                    <div class="info-card">
                        <div class="info-icon location">
                            <i class="fas fa-map-marker-alt"></i>
                        </div>
                        <div class="info-content">
                            <h4>Location</h4>
                            <p>Remote Team</p>
                            <span class="info-badge">Worldwide</span>
                        </div>
                    </div>
                </div>

                <!-- FAQ Quick Links -->
                <div class="faq-section">
                    <h3>Quick Help</h3>
                    <div class="faq-links">
                        <a href="#" class="faq-link">
                            <i class="fas fa-question-circle"></i>
                            <span>How do I track my meals?</span>
                        </a>
                        <a href="#" class="faq-link">
                            <i class="fas fa-question-circle"></i>
                            <span>How to set my calorie goals?</span>
                        </a>
                        <a href="#" class="faq-link">
                            <i class="fas fa-question-circle"></i>
                            <span>Is my data secure?</span>
                        </a>
                    </div>
                </div>
            </div>

            <!-- Contact Form -->
            <div class="contact-form-section">
                <div class="form-card">
                    <div class="form-header">
                        <h3>Send Us a Message</h3>
                        <p>Fill out the form below and we'll get back to you soon</p>
                    </div>

                    <% if (success) { %>
                        <div class="alert alert-success-enhanced">
                            <div class="alert-icon">
                                <i class="fas fa-check-circle"></i>
                            </div>
                            <div class="alert-content">
                                <h4>Message Sent!</h4>
                                <p><%= success %></p>
                            </div>
                        </div>
                    <% } %>

                    <% if (errors && errors.length > 0) { %>
                        <div class="alert alert-error-enhanced">
                            <div class="alert-icon">
                                <i class="fas fa-exclamation-circle"></i>
                            </div>
                            <div class="alert-content">
                                <h4>Oops! Something went wrong</h4>
                                <ul>
                                    <% errors.forEach(error => { %>
                                        <li><%= error.msg %></li>
                                    <% }); %>
                                </ul>
                            </div>
                        </div>
                    <% } %>

                    <form action="/contact" method="POST" class="contact-form-enhanced">
                        <div class="form-group-enhanced">
                            <label for="name">
                                <i class="fas fa-user"></i>
                                Full Name
                            </label>
                            <input type="text" id="name" name="name" placeholder="John Doe" required>
                        </div>

                        <div class="form-group-enhanced">
                            <label for="email">
                                <i class="fas fa-envelope"></i>
                                Email Address
                            </label>
                            <input type="email" id="email" name="email" placeholder="john@example.com" required>
                        </div>

                        <div class="form-group-enhanced">
                            <label for="message">
                                <i class="fas fa-comment-dots"></i>
                                Your Message
                            </label>
                            <textarea id="message" name="message" rows="6" placeholder="Tell us how we can help you..." required></textarea>
                            <div class="char-count">
                                <span id="charCount">0</span> / 500 characters
                            </div>
                        </div>

                        <button type="submit" class="btn-submit-enhanced">
                            <i class="fas fa-paper-plane"></i>
                            <span>Send Message</span>
                        </button>
                    </form>

                    <div class="form-footer">
                        <p><i class="fas fa-lock"></i> Your information is secure and will never be shared</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Additional Info Section -->
<section class="contact-extra-section">
    <div class="container">
        <div class="extra-grid">
            <div class="extra-card">
                <div class="extra-icon">
                    <i class="fas fa-rocket"></i>
                </div>
                <h4>Quick Response</h4>
                <p>We aim to respond to all inquiries within 24-48 hours during business days</p>
            </div>
            <div class="extra-card">
                <div class="extra-icon">
                    <i class="fas fa-shield-alt"></i>
                </div>
                <h4>Privacy First</h4>
                <p>Your data is protected with industry-standard security measures</p>
            </div>
            <div class="extra-card">
                <div class="extra-icon">
                    <i class="fas fa-heart"></i>
                </div>
                <h4>Dedicated Support</h4>
                <p>Our team is passionate about helping you achieve your health goals</p>
            </div>
        </div>
    </div>
</section>

<style>
/* Contact Hero */
.contact-hero {
    background: linear-gradient(135deg, #10b981 0%, #059669 100%);
    padding: 6rem 0 4rem;
    position: relative;
    overflow: hidden;
}

/* Entrance Animations - Flip/Rotate/Bounce Style */
.animate-flip-in {
    animation: flipIn 0.8s ease-out;
}

.animate-rotate-in {
    animation: rotateIn 1s ease-out 0.2s both;
}

.animate-bounce-in {
    animation: bounceIn 1s ease-out 0.4s both;
}

@keyframes flipIn {
    from {
        opacity: 0;
        transform: perspective(400px) rotateX(-90deg);
    }
    to {
        opacity: 1;
        transform: perspective(400px) rotateX(0deg);
    }
}

@keyframes rotateIn {
    from {
        opacity: 0;
        transform: rotate(-10deg) translateY(-30px);
    }
    to {
        opacity: 1;
        transform: rotate(0deg) translateY(0);
    }
}

@keyframes bounceIn {
    0% {
        opacity: 0;
        transform: translateY(50px);
    }
    60% {
        opacity: 1;
        transform: translateY(-10px);
    }
    80% {
        transform: translateY(5px);
    }
    100% {
        transform: translateY(0);
    }
}

.contact-hero::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url('data:image/svg+xml,<svg width="100" height="100" xmlns="http://www.w3.org/2000/svg"><circle cx="50" cy="50" r="2" fill="rgba(255,255,255,0.1)"/></svg>');
    opacity: 0.3;
}

/* Contact Main Section */
.contact-main-section {
    padding: 6rem 0;
    background: var(--bg-primary);
    position: relative;
    overflow: hidden;
}

/* Animated Pulse Elements */
.contact-pulse-elements {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    pointer-events: none;
    z-index: 0;
}

.pulse-element {
    position: absolute;
    width: 100px;
    height: 100px;
    border-radius: 50%;
    background: var(--gradient-primary);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0.06;
    animation: pulseBounce 4s ease-in-out infinite;
}

.pulse-element i {
    font-size: 2.5rem;
    color: var(--primary-color);
    opacity: 0.5;
}

.pulse-element::before {
    content: '';
    position: absolute;
    width: 100%;
    height: 100%;
    border-radius: 50%;
    border: 2px solid var(--primary-color);
    animation: pulseRing 2s ease-out infinite;
}

.pulse-1 {
    top: 10%;
    left: 8%;
    animation-delay: 0s;
}

.pulse-2 {
    top: 25%;
    right: 12%;
    animation-delay: 0.5s;
    width: 80px;
    height: 80px;
}

.pulse-3 {
    top: 55%;
    left: 15%;
    animation-delay: 1s;
    width: 90px;
    height: 90px;
}

.pulse-4 {
    top: 70%;
    right: 18%;
    animation-delay: 1.5s;
    width: 85px;
    height: 85px;
}

.pulse-5 {
    bottom: 15%;
    left: 25%;
    animation-delay: 2s;
    width: 95px;
    height: 95px;
}

.pulse-6 {
    bottom: 30%;
    right: 10%;
    animation-delay: 2.5s;
    width: 75px;
    height: 75px;
}

@keyframes pulseBounce {
    0%, 100% {
        transform: scale(1) translateY(0);
        opacity: 0.06;
    }
    50% {
        transform: scale(1.2) translateY(-20px);
        opacity: 0.12;
    }
}

@keyframes pulseRing {
    0% {
        transform: scale(1);
        opacity: 0.5;
    }
    100% {
        transform: scale(1.8);
        opacity: 0;
    }
}

.contact-grid {
    display: grid;
    grid-template-columns: 1fr 1.2fr;
    gap: 4rem;
    position: relative;
    z-index: 1;
}

/* Contact Info Section */
.contact-info-section h2 {
    font-size: 2.5rem;
    color: var(--text-primary);
    margin-bottom: 1rem;
    line-height: 1.3;
}

.info-description {
    color: var(--text-secondary);
    line-height: 1.8;
    margin-bottom: 2rem;
    font-size: 1.05rem;
}

.contact-cards {
    display: grid;
    gap: 1.5rem;
    margin-bottom: 3rem;
}

.info-card {
    background: var(--bg-secondary);
    border: 1px solid var(--border-color);
    border-radius: 16px;
    padding: 1.5rem;
    display: flex;
    gap: 1.5rem;
    align-items: flex-start;
    transition: all 0.3s ease;
}

.info-card:hover {
    transform: translateX(10px);
    box-shadow: var(--shadow-lg);
    border-color: var(--primary-color);
}

.info-icon {
    width: 60px;
    height: 60px;
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    color: white;
    flex-shrink: 0;
}

.info-icon.email {
    background: linear-gradient(135deg, #3b82f6, #60a5fa);
}

.info-icon.time {
    background: linear-gradient(135deg, #10b981, #34d399);
}

.info-icon.support {
    background: linear-gradient(135deg, #8b5cf6, #a78bfa);
}

.info-icon.location {
    background: linear-gradient(135deg, #f59e0b, #fbbf24);
}

.info-content h4 {
    color: var(--text-primary);
    margin-bottom: 0.5rem;
    font-size: 1.125rem;
}

.info-content p {
    color: var(--text-secondary);
    margin-bottom: 0.5rem;
}

.info-badge {
    display: inline-block;
    background: var(--bg-primary);
    border: 1px solid var(--border-color);
    padding: 0.25rem 0.75rem;
    border-radius: 20px;
    font-size: 0.75rem;
    color: var(--primary-color);
    font-weight: 600;
}

/* FAQ Section */
.faq-section {
    background: var(--bg-secondary);
    border: 1px solid var(--border-color);
    border-radius: 16px;
    padding: 2rem;
}

.faq-section h3 {
    color: var(--text-primary);
    margin-bottom: 1.5rem;
    font-size: 1.25rem;
}

.faq-links {
    display: flex;
    flex-direction: column;
    gap: 1rem;
}

.faq-link {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    color: var(--text-secondary);
    text-decoration: none;
    transition: all 0.3s ease;
    padding: 0.75rem;
    border-radius: 8px;
}

.faq-link:hover {
    background: var(--bg-primary);
    color: var(--primary-color);
    transform: translateX(5px);
}

.faq-link i {
    color: var(--primary-color);
}

/* Contact Form Section */
.form-card {
    background: var(--bg-secondary);
    border: 1px solid var(--border-color);
    border-radius: 20px;
    padding: 3rem;
    box-shadow: var(--shadow-lg);
}

.form-header {
    margin-bottom: 2rem;
}

.form-header h3 {
    font-size: 2rem;
    color: var(--text-primary);
    margin-bottom: 0.5rem;
}

.form-header p {
    color: var(--text-secondary);
}

/* Enhanced Alerts */
.alert-success-enhanced,
.alert-error-enhanced {
    display: flex;
    gap: 1rem;
    padding: 1.5rem;
    border-radius: 12px;
    margin-bottom: 2rem;
}

.alert-success-enhanced {
    background: linear-gradient(135deg, rgba(16, 185, 129, 0.1), rgba(16, 185, 129, 0.05));
    border: 1px solid var(--success-color);
}

.alert-error-enhanced {
    background: linear-gradient(135deg, rgba(239, 68, 68, 0.1), rgba(239, 68, 68, 0.05));
    border: 1px solid #ef4444;
}

.alert-icon {
    font-size: 2rem;
}

.alert-success-enhanced .alert-icon {
    color: var(--success-color);
}

.alert-error-enhanced .alert-icon {
    color: #ef4444;
}

.alert-content h4 {
    color: var(--text-primary);
    margin-bottom: 0.5rem;
    font-size: 1.125rem;
}

.alert-content p,
.alert-content ul {
    color: var(--text-secondary);
    margin: 0;
}

.alert-content ul {
    padding-left: 1.5rem;
}

/* Enhanced Form */
.contact-form-enhanced {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
}

.form-group-enhanced {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
}

.form-group-enhanced label {
    color: var(--text-primary);
    font-weight: 600;
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

.form-group-enhanced label i {
    color: var(--primary-color);
}

.form-group-enhanced input,
.form-group-enhanced textarea {
    background: var(--bg-primary);
    border: 2px solid var(--border-color);
    border-radius: 12px;
    padding: 1rem;
    color: var(--text-primary);
    font-size: 1rem;
    transition: all 0.3s ease;
}

.form-group-enhanced input:focus,
.form-group-enhanced textarea:focus {
    outline: none;
    border-color: var(--primary-color);
    box-shadow: 0 0 0 4px rgba(16, 185, 129, 0.1);
}

.form-group-enhanced textarea {
    resize: vertical;
    min-height: 150px;
}

.char-count {
    text-align: right;
    font-size: 0.875rem;
    color: var(--text-secondary);
}

.btn-submit-enhanced {
    background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
    color: white;
    border: none;
    border-radius: 12px;
    padding: 1.25rem 2rem;
    font-size: 1.125rem;
    font-weight: 600;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
    transition: all 0.3s ease;
}

.btn-submit-enhanced:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 25px rgba(16, 185, 129, 0.3);
}

.form-footer {
    margin-top: 1.5rem;
    padding-top: 1.5rem;
    border-top: 1px solid var(--border-color);
    text-align: center;
}

.form-footer p {
    color: var(--text-secondary);
    font-size: 0.875rem;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
}

.form-footer i {
    color: var(--success-color);
}

/* Extra Section */
.contact-extra-section {
    padding: 4rem 0;
    background: var(--bg-secondary);
}

.extra-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
}

.extra-card {
    text-align: center;
    padding: 2rem;
}

.extra-icon {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 2rem;
    margin: 0 auto 1.5rem;
}

.extra-card h4 {
    color: var(--text-primary);
    margin-bottom: 0.75rem;
    font-size: 1.25rem;
}

.extra-card p {
    color: var(--text-secondary);
    line-height: 1.7;
}

/* Floating Elements for Pages */
.floating-elements-page {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    pointer-events: none;
    overflow: hidden;
}

.float-element-page {
    position: absolute;
    width: 60px;
    height: 60px;
    background: rgba(255, 255, 255, 0.15);
    backdrop-filter: blur(5px);
    border: 1px solid rgba(255, 255, 255, 0.3);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    color: rgba(255, 255, 255, 0.7);
    animation: floatPage 6s ease-in-out infinite;
}

.float-element-page:nth-child(2) {
    animation-delay: 1.2s;
}

.float-element-page:nth-child(3) {
    animation-delay: 2.4s;
}

.float-element-page:nth-child(4) {
    animation-delay: 3.6s;
}

.float-element-page:nth-child(5) {
    animation-delay: 4.8s;
}

@keyframes floatPage {
    0%, 100% {
        transform: translateY(0) rotate(0deg);
    }
    25% {
        transform: translateY(-20px) rotate(5deg);
    }
    50% {
        transform: translateY(-10px) rotate(-5deg);
    }
    75% {
        transform: translateY(-15px) rotate(3deg);
    }
}

/* Responsive */
@media (max-width: 968px) {
    .contact-grid {
        grid-template-columns: 1fr;
    }
    
    .extra-grid {
        grid-template-columns: 1fr;
    }
    
    .float-element-page {
        display: none;
    }
}
</style>

<script>
// Character counter
const messageTextarea = document.getElementById('message');
const charCount = document.getElementById('charCount');

if (messageTextarea && charCount) {
    messageTextarea.addEventListener('input', function() {
        const count = this.value.length;
        charCount.textContent = count;
        
        if (count > 500) {
            charCount.style.color = '#ef4444';
        } else {
            charCount.style.color = 'var(--text-secondary)';
        }
    });
}
</script>

