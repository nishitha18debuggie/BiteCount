                    <div class="element-card">
                        <i class="fas fa-fire"></i>
                        <span>Burn Calories</span>
                    </div>
                </div>
                
                <div class="floating-element element-5">
                    <div class="element-card">
                        <i class="fas fa-heart-pulse"></i>
                        <span>Stay Healthy</span>
                    </div>
