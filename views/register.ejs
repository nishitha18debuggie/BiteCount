<%- include('partials/header') %>

<div class="auth-split-page">
    <!-- Theme Toggle -->
    <div class="auth-theme-toggle">
        <button class="theme-toggle" id="themeToggle" aria-label="Toggle theme">
            <div class="theme-toggle-slider">
                <i class="fas fa-moon"></i>
            </div>
        </button>
    </div>

    <!-- Left Side - Register Form -->
    <div class="auth-left-side-form">
        <div class="auth-form-container-register">
            <a href="/" class="auth-logo-split-form">
                <img src="/images/logo.png" alt="BiteCount Logo" class="logo-img">
                <span>BiteCount</span>
            </a>

            <div class="auth-form-header">
                <h2>Create Account</h2>
                <p>Start your journey to better health today</p>
            </div>

            <!-- Alert -->
            <% if (errors && errors.length > 0) { %>
                <div class="alert-split alert-error-split">
                    <i class="fas fa-exclamation-circle"></i>
                    <div>
                        <ul style="margin: 0; padding-left: 1.25rem;">
                            <% errors.forEach(error => { %>
                                <li><%= error.msg %></li>
                            <% }); %>
                        </ul>
                    </div>
                </div>
            <% } %>

            <!-- Form -->
            <form action="/register" method="POST" class="auth-form-split register-form">
                <div class="form-row-split">
                    <div class="form-group-split">
                        <label for="fullName"><i class="fas fa-user"></i> Full Name</label>
                        <input type="text" id="fullName" name="fullName" placeholder="John Doe" required>
                    </div>

                    <div class="form-group-split">
                        <label for="email"><i class="fas fa-envelope"></i> Email</label>
                        <input type="email" id="email" name="email" placeholder="your@email.com" required>
                    </div>
                </div>

                <div class="form-group-split">
                    <label for="password"><i class="fas fa-lock"></i> Password (min. 6 characters)</label>
                    <input type="password" id="password" name="password" placeholder="Create password" required minlength="6">
                </div>

                <div class="form-row-split">
                    <div class="form-group-split">
                        <label for="age"><i class="fas fa-calendar"></i> Age</label>
                        <input type="number" id="age" name="age" placeholder="25" required min="13" max="120">
                    </div>

                    <div class="form-group-split">
                        <label for="gender"><i class="fas fa-venus-mars"></i> Gender</label>
                        <select id="gender" name="gender" required>
                            <option value="">Select...</option>
                            <option value="male">Male</option>
                            <option value="female">Female</option>
                            <option value="other">Other</option>
                        </select>
                    </div>
                </div>

                <div class="form-row-split">
                    <div class="form-group-split">
                        <label for="height"><i class="fas fa-ruler-vertical"></i> Height (cm)</label>
                        <input type="number" id="height" name="height" placeholder="170" required min="50" max="300" step="0.1">
                    </div>

                    <div class="form-group-split">
                        <label for="weight"><i class="fas fa-weight"></i> Weight (kg)</label>
                        <input type="number" id="weight" name="weight" placeholder="70" required min="20" max="500" step="0.1">
                    </div>
                </div>

                <div class="form-group-split">
                    <label for="activityLevel"><i class="fas fa-running"></i> Activity Level</label>
                    <select id="activityLevel" name="activityLevel" required>
                        <option value="">Select...</option>
                        <option value="sedentary">Sedentary</option>
                        <option value="lightly_active">Lightly Active</option>
                        <option value="moderately_active">Moderately Active</option>
                        <option value="very_active">Very Active</option>
                        <option value="extremely_active">Extremely Active</option>
                    </select>
                </div>

                <div class="form-group-split">
                    <label for="healthCondition"><i class="fas fa-heartbeat"></i> Health Condition (Optional)</label>
                    <input type="text" id="healthCondition" name="healthCondition" placeholder="None">
                </div>

                <button type="submit" class="btn-split-submit">
                    <i class="fas fa-user-plus"></i>
                    <span>Create Account</span>
                </button>
            </form>

            <!-- Footer -->
            <div class="auth-form-footer">
                <p>Already have an account? <a href="/login">Login here</a></p>
                <p class="back-link"><a href="/"><i class="fas fa-arrow-left"></i> Back to Home</a></p>
            </div>
        </div>
    </div>

    <!-- Right Side - About Website with Animations -->
    <div class="auth-right-side-about">
        <div class="auth-right-content">
            <h1 class="auth-right-title">Join <span class="gradient-text">10,000+</span> Users</h1>
            <p class="auth-right-subtitle">Transform your health with our comprehensive nutrition tracking platform</p>

            <!-- Animated Feature Cards -->
            <div class="feature-cards-animated">
                <div class="feature-card-anim" style="animation-delay: 0.2s;">
                    <div class="feature-icon-anim">
                        <i class="fas fa-utensils"></i>
                    </div>
                    <div class="feature-content-anim">
                        <h3>Track Nutrition</h3>
                        <p>Log meals and monitor your daily calorie and macro intake</p>
                    </div>
                </div>

                <div class="feature-card-anim" style="animation-delay: 0.4s;">
                    <div class="feature-icon-anim">
                        <i class="fas fa-dumbbell"></i>
                    </div>
                    <div class="feature-content-anim">
                        <h3>Log Exercise</h3>
                        <p>Track workouts and see how they impact your calorie balance</p>
                    </div>
                </div>

                <div class="feature-card-anim" style="animation-delay: 0.6s;">
                    <div class="feature-icon-anim">
                        <i class="fas fa-chart-bar"></i>
                    </div>
                    <div class="feature-content-anim">
                        <h3>View Analytics</h3>
                        <p>Visualize your progress with detailed charts and insights</p>
                    </div>
                </div>
            </div>

            <!-- Floating Elements -->
            <div class="floating-elements-auth">
                <div class="float-element" style="top: 15%; right: 10%;">
                    <i class="fas fa-apple-alt"></i>
                </div>
                <div class="float-element" style="top: 25%; left: 15%;">
                    <i class="fas fa-fire"></i>
                </div>
                <div class="float-element" style="bottom: 30%; right: 15%;">
                    <i class="fas fa-heart"></i>
                </div>
                <div class="float-element" style="bottom: 20%; left: 10%;">
                    <i class="fas fa-trophy"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
/* Split Screen Auth Page - Register */
.auth-split-page {
    display: grid;
    grid-template-columns: 1fr 1fr;
    min-height: 100vh;
    overflow: hidden;
}

/* Theme Toggle */
.auth-theme-toggle {
    position: fixed;
    top: 2rem;
    right: 2rem;
    z-index: 100;
}

/* Left Side - Form */
.auth-left-side-form {
    background: var(--bg-primary);
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 3rem;
    overflow-y: auto;
}

.auth-form-container-register {
    width: 100%;
    max-width: 500px;
    animation: fadeInLeft 0.8s ease;
}

.auth-logo-split-form {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    text-decoration: none;
    color: var(--text-primary);
    font-size: 1.5rem;
    font-weight: 700;
    margin-bottom: 2rem;
    transition: all 0.3s ease;
}

.auth-logo-split-form:hover {
    transform: translateX(-5px);
}

.logo-img {
    width: 45px;
    height: 45px;
    object-fit: contain;
}

.auth-form-header {
    margin-bottom: 2rem;
}

.auth-form-header h2 {
    font-size: 2.25rem;
    font-weight: 800;
    color: var(--text-primary);
    margin-bottom: 0.5rem;
}

.auth-form-header p {
    color: var(--text-secondary);
    font-size: 1rem;
}

/* Alert */
.alert-split {
    display: flex;
    align-items: flex-start;
    gap: 0.75rem;
    padding: 1rem 1.25rem;
    border-radius: 12px;
    margin-bottom: 1.5rem;
    animation: shake 0.5s ease;
}

.alert-error-split {
    background: rgba(239, 68, 68, 0.1);
    border: 1px solid #ef4444;
    color: var(--text-primary);
}

.alert-split i {
    color: #ef4444;
    font-size: 1.25rem;
    margin-top: 0.125rem;
}

/* Form */
.auth-form-split {
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
    margin-bottom: 1.5rem;
}

.register-form {
    gap: 1rem;
}

.form-row-split {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
}

.form-group-split {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
}

.form-group-split label {
    color: var(--text-primary);
    font-weight: 600;
    font-size: 0.875rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

.form-group-split label i {
    color: var(--primary-color);
}

.form-group-split input,
.form-group-split select {
    background: var(--bg-secondary);
    border: 2px solid var(--border-color);
    border-radius: 12px;
    padding: 0.875rem 1rem;
    color: var(--text-primary);
    font-size: 0.95rem;
    transition: all 0.3s ease;
}

.form-group-split input:focus,
.form-group-split select:focus {
    outline: none;
    border-color: var(--primary-color);
    box-shadow: 0 0 0 4px rgba(16, 185, 129, 0.1);
}

.form-group-split input::placeholder {
    color: var(--text-secondary);
    opacity: 0.6;
}

.form-group-split select {
    cursor: pointer;
}

/* Submit Button */
.btn-split-submit {
    background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
    color: white;
    border: none;
    border-radius: 12px;
    padding: 1.125rem 2rem;
    font-size: 1.0625rem;
    font-weight: 600;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
    transition: all 0.3s ease;
    margin-top: 0.5rem;
}

.btn-split-submit:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 25px rgba(16, 185, 129, 0.3);
}

/* Footer */
.auth-form-footer {
    text-align: center;
    padding-top: 1.5rem;
    border-top: 1px solid var(--border-color);
}

.auth-form-footer p {
    color: var(--text-secondary);
    margin-bottom: 0.75rem;
    font-size: 0.9375rem;
}

.auth-form-footer a {
    color: var(--primary-color);
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s ease;
}

.auth-form-footer a:hover {
    text-decoration: underline;
}

.back-link a {
    color: var(--text-secondary);
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
}

.back-link a:hover {
    color: var(--primary-color);
}

/* Right Side - About Website */
.auth-right-side-about {
    background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
    padding: 4rem;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    overflow: hidden;
}

.auth-right-side-about::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url('data:image/svg+xml,<svg width="100" height="100" xmlns="http://www.w3.org/2000/svg"><circle cx="50" cy="50" r="2" fill="rgba(255,255,255,0.1)"/></svg>');
    opacity: 0.3;
}

.auth-right-content {
    position: relative;
    z-index: 1;
    max-width: 500px;
}

.auth-right-title {
    font-size: 3rem;
    font-weight: 800;
    color: white;
    margin-bottom: 1rem;
    line-height: 1.2;
    animation: fadeInUp 0.8s ease;
}

.gradient-text {
    background: linear-gradient(135deg, #fbbf24, #f59e0b);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
}

.auth-right-subtitle {
    font-size: 1.25rem;
    color: rgba(255, 255, 255, 0.9);
    margin-bottom: 3rem;
    line-height: 1.7;
    animation: fadeInUp 0.8s ease 0.2s both;
}

/* Feature Cards Animated */
.feature-cards-animated {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
}

.feature-card-anim {
    background: rgba(255, 255, 255, 0.15);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.3);
    border-radius: 16px;
    padding: 1.5rem;
    display: flex;
    gap: 1.5rem;
    align-items: flex-start;
    animation: slideInRight 0.8s ease both;
    transition: all 0.3s ease;
}

.feature-card-anim:hover {
    transform: translateX(-10px);
    background: rgba(255, 255, 255, 0.25);
}

.feature-icon-anim {
    width: 60px;
    height: 60px;
    border-radius: 12px;
    background: rgba(255, 255, 255, 0.2);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.75rem;
    color: #fbbf24;
    flex-shrink: 0;
}

.feature-content-anim h3 {
    color: white;
    font-size: 1.25rem;
    margin-bottom: 0.5rem;
}

.feature-content-anim p {
    color: rgba(255, 255, 255, 0.8);
    font-size: 0.95rem;
    line-height: 1.6;
}

/* Floating Elements */
.floating-elements-auth {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    pointer-events: none;
}

.float-element {
    position: absolute;
    width: 60px;
    height: 60px;
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(5px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    color: rgba(255, 255, 255, 0.6);
    animation: float 6s ease-in-out infinite;
}

.float-element:nth-child(2) {
    animation-delay: 1.5s;
}

.float-element:nth-child(3) {
    animation-delay: 3s;
}

.float-element:nth-child(4) {
    animation-delay: 4.5s;
}

/* Animations */
@keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(30px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

@keyframes fadeInLeft {
    from {
        opacity: 0;
        transform: translateX(-30px);
    }
    to {
        opacity: 1;
        transform: translateX(0);
    }
}

@keyframes slideInRight {
    from {
        opacity: 0;
        transform: translateX(30px);
    }
    to {
        opacity: 1;
        transform: translateX(0);
    }
}

@keyframes float {
    0%, 100% {
        transform: translateY(0) rotate(0deg);
    }
    25% {
        transform: translateY(-20px) rotate(5deg);
    }
    50% {
        transform: translateY(-10px) rotate(-5deg);
    }
    75% {
        transform: translateY(-15px) rotate(3deg);
    }
}

@keyframes shake {
    0%, 100% { transform: translateX(0); }
    25% { transform: translateX(-10px); }
    75% { transform: translateX(10px); }
}

/* Responsive */
@media (max-width: 968px) {
    .auth-split-page {
        grid-template-columns: 1fr;
    }
    
    .auth-right-side-about {
        display: none;
    }
    
    .auth-left-side-form {
        padding: 2rem;
    }
    
    .auth-form-header h2 {
        font-size: 2rem;
    }
}

@media (max-width: 640px) {
    .auth-left-side-form {
        padding: 1.5rem;
    }
    
    .auth-form-header h2 {
        font-size: 1.75rem;
    }
    
    .form-row-split {
        grid-template-columns: 1fr;
    }
    
    .auth-theme-toggle {
        top: 1rem;
        right: 1rem;
    }
}
</style>

<script src="/js/theme.js"></script>
<script src="/js/main.js"></script>
</body>
</html>
