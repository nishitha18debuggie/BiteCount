/* Responsive */
@media (max-width: 968px) {
    .hero-title {
        font-size: 2.5rem;
    }
    
    .services-grid-enhanced {
        grid-template-columns: repeat(2, 1fr);
    }
    
    .cta-buttons {
        flex-direction: column;
        align-items: center;
    }
    
    .btn-large {
        width: 100%;
        max-width: 300px;
        justify-content: center;
    }
}

@media (max-width: 640px) {
    .services-grid-enhanced {
        grid-template-columns: 1fr;
    }
    
    .hero-title {
        font-size: 2rem;
    }
    
    .cta-card-services {
        padding: 2.5rem 1.5rem;
    }
    
    .cta-content h2 {
        font-size: 2rem;
    }
    
