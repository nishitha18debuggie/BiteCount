<%- include('../partials/header') %>
<%- include('../partials/navbar-user') %>

<div class="dashboard-container">
    <div class="container">
        <div class="dashboard-header">
            <h1>üèÜ Achievements & Rewards</h1>
            <p>Track your progress and earn rewards!</p>
        </div>

        <!-- Progress Summary -->
        <div class="stats-grid-advanced" style="margin-bottom: 2rem;">
            <div class="stat-card-advanced">
                <div class="stat-icon" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                    <i class="fas fa-star"></i>
                </div>
                <div class="stat-content">
                    <div class="stat-label">Level</div>
                    <div class="stat-value"><%= progressSummary.level %></div>
                    <div class="stat-trend positive">
                        <i class="fas fa-arrow-up"></i>
                        <%= progressSummary.totalPoints %> points
                    </div>
                </div>
            </div>

            <div class="stat-card-advanced">
                <div class="stat-icon" style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);">
                    <i class="fas fa-trophy"></i>
                </div>
                <div class="stat-content">
                    <div class="stat-label">Achievements</div>
                    <div class="stat-value"><%= progressSummary.achievementsCompleted %>/<%= progressSummary.achievementsTotal %></div>
                    <div class="stat-trend positive">
                        <i class="fas fa-check-circle"></i>
                        <%= progressSummary.completionPercentage %>% complete
                    </div>
                </div>
            </div>

            <div class="stat-card-advanced">
                <div class="stat-icon" style="background: linear-gradient(135deg, #fa709a 0%, #fee140 100%);">
                    <i class="fas fa-fire"></i>
                </div>
                <div class="stat-content">
                    <div class="stat-label">Current Streak</div>
                    <div class="stat-value"><%= progressSummary.currentStreak %> days</div>
                    <div class="stat-trend">
                        <i class="fas fa-medal"></i>
                        Best: <%= progressSummary.longestStreak %> days
                    </div>
                </div>
            </div>

            <div class="stat-card-advanced">
                <div class="stat-icon" style="background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);">
                    <i class="fas fa-award"></i>
                </div>
                <div class="stat-content">
                    <div class="stat-label">Badges Earned</div>
                    <div class="stat-value"><%= progressSummary.badges.length %></div>
                    <div class="stat-trend positive">
                        <i class="fas fa-shield-alt"></i>
                        Collected
                    </div>
                </div>
            </div>
        </div>

        <!-- Badges Section -->
        <% if (progressSummary.badges.length > 0) { %>
        <div class="card-advanced" style="margin-bottom: 2rem;">
            <h2 style="margin-bottom: 1.5rem; color: var(--text-primary);">
                <i class="fas fa-shield-alt"></i> Your Badges
            </h2>
            <div class="badges-grid">
                <% progressSummary.badges.forEach(badge => { %>
                    <div class="badge-item">
                        <div class="badge-icon">üèÜ</div>
                        <div class="badge-name"><%= badge.name %></div>
                        <div class="badge-date">
                            <%= new Date(badge.earnedAt).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' }) %>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
        <% } %>

        <!-- Achievements Grid -->
        <div class="achievements-container">
            <h2 style="margin-bottom: 1.5rem; color: var(--text-primary);">
                <i class="fas fa-list-check"></i> All Achievements
            </h2>

            <!-- Completed Achievements -->
            <% 
            const completedAchievements = achievements.filter(a => a.completed);
            const incompleteAchievements = achievements.filter(a => !a.completed);
            %>

            <% if (completedAchievements.length > 0) { %>
            <h3 style="color: var(--success-color); margin-bottom: 1rem;">
                <i class="fas fa-check-circle"></i> Completed (<%= completedAchievements.length %>)
            </h3>
            <div class="achievements-grid">
                <% completedAchievements.forEach(achievement => { %>
                    <div class="achievement-card completed">
                        <div class="achievement-icon"><%= achievement.icon %></div>
                        <div class="achievement-content">
                            <h3><%= achievement.title %></h3>
                            <p><%= achievement.description %></p>
                            <div class="achievement-progress">
                                <div class="progress-bar">
                                    <div class="progress-fill" style="width: 100%;"></div>
                                </div>
                                <div class="progress-text"><%= achievement.milestone %>/<%= achievement.milestone %></div>
                            </div>
                            <div class="achievement-reward">
                                <span class="reward-points">+<%= achievement.reward.points %> points</span>
                                <% if (achievement.reward.badge) { %>
                                    <span class="reward-badge">üèÜ <%= achievement.reward.badge %></span>
                                <% } %>
                            </div>
                            <div class="achievement-completed-date">
                                <i class="fas fa-check-circle"></i>
                                Completed <%= new Date(achievement.completedAt).toLocaleDateString('en-US', { month: 'short', day: 'numeric' }) %>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
            <% } %>

            <!-- In Progress Achievements -->
            <% if (incompleteAchievements.length > 0) { %>
            <h3 style="color: var(--primary-color); margin: 2rem 0 1rem 0;">
                <i class="fas fa-hourglass-half"></i> In Progress (<%= incompleteAchievements.length %>)
            </h3>
            <div class="achievements-grid">
                <% incompleteAchievements.forEach(achievement => { %>
                    <div class="achievement-card">
                        <div class="achievement-icon"><%= achievement.icon %></div>
                        <div class="achievement-content">
                            <h3><%= achievement.title %></h3>
                            <p><%= achievement.description %></p>
                            <div class="achievement-progress">
                                <div class="progress-bar">
                                    <div class="progress-fill" style="width: <%= Math.min((achievement.progress / achievement.milestone) * 100, 100) %>%;"></div>
                                </div>
                                <div class="progress-text"><%= achievement.progress %>/<%= achievement.milestone %></div>
                            </div>
                            <div class="achievement-reward">
                                <span class="reward-points">+<%= achievement.reward.points %> points</span>
                                <% if (achievement.reward.badge) { %>
                                    <span class="reward-badge">üèÜ <%= achievement.reward.badge %></span>
                                <% } %>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
            <% } %>
        </div>
    </div>
</div>

<style>
.achievements-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 1.5rem;
    margin-bottom: 2rem;
}

.achievement-card {
    background: var(--bg-secondary);
    border: 2px solid var(--border-color);
    border-radius: 16px;
    padding: 1.5rem;
    transition: all 0.3s ease;
}

.achievement-card:hover {
    transform: translateY(-5px);
    box-shadow: var(--shadow-xl);
    border-color: var(--primary-color);
}

.achievement-card.completed {
    border-color: var(--success-color);
    background: linear-gradient(135deg, rgba(16, 185, 129, 0.05) 0%, rgba(16, 185, 129, 0.02) 100%);
}

.achievement-icon {
    font-size: 3rem;
    text-align: center;
    margin-bottom: 1rem;
}

.achievement-content h3 {
    color: var(--text-primary);
    margin-bottom: 0.5rem;
    font-size: 1.25rem;
}

.achievement-content p {
    color: var(--text-secondary);
    margin-bottom: 1rem;
    font-size: 0.875rem;
}

.achievement-progress {
    margin-bottom: 1rem;
}

.progress-bar {
    height: 8px;
    background: var(--bg-primary);
    border-radius: 4px;
    overflow: hidden;
    margin-bottom: 0.5rem;
}

.progress-fill {
    height: 100%;
    background: linear-gradient(90deg, var(--primary-color), var(--secondary-color));
    transition: width 0.3s ease;
}

.achievement-card.completed .progress-fill {
    background: linear-gradient(90deg, var(--success-color), #34d399);
}

.progress-text {
    font-size: 0.875rem;
    color: var(--text-secondary);
    text-align: right;
}

.achievement-reward {
    display: flex;
    gap: 0.75rem;
    flex-wrap: wrap;
    margin-bottom: 0.75rem;
}

.reward-points {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    padding: 0.25rem 0.75rem;
    border-radius: 20px;
    font-size: 0.875rem;
    font-weight: 600;
}

.reward-badge {
    background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
    color: white;
    padding: 0.25rem 0.75rem;
    border-radius: 20px;
    font-size: 0.875rem;
    font-weight: 600;
}

.achievement-completed-date {
    color: var(--success-color);
    font-size: 0.875rem;
    font-weight: 600;
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

.badges-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
    gap: 1rem;
}

.badge-item {
    background: var(--bg-primary);
    border: 2px solid var(--border-color);
    border-radius: 12px;
    padding: 1.5rem 1rem;
    text-align: center;
    transition: all 0.3s ease;
}

.badge-item:hover {
    transform: scale(1.05);
    border-color: var(--primary-color);
}

.badge-icon {
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
}

.badge-name {
    color: var(--text-primary);
    font-weight: 600;
    margin-bottom: 0.25rem;
    font-size: 0.875rem;
}

.badge-date {
    color: var(--text-secondary);
    font-size: 0.75rem;
}

@media (max-width: 768px) {
    .achievements-grid {
        grid-template-columns: 1fr;
    }
    
    .badges-grid {
        grid-template-columns: repeat(auto-fill, minmax(120px, 1fr));
    }
}
</style>

<%- include('../partials/footer') %>
